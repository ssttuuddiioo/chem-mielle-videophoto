{
  "name": "strips",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently -k \"vite dev --port 5173 --strictPort\" \"npm run electron:start\"",
    "electron:start": "wait-on http://localhost:5173 && electron .",
    "build": "tsc -b && vite build",
    "build:electron": "vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "react-webcam": "^7.2.0",
    "tailwindcss": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^24.0.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "electron": "^30.0.0",
    "electron-builder": "26.0.12",
    "concurrently": "^8.2.0",
    "wait-on": "^7.1.1"
  },
  "build": {
    "appId": "com.strips.kiosk",
    "productName": "Strips Kiosk",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "asar": true,
    "mac": {
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
